{
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "vue/singleline-html-element-content-newline": "off",
      "vue/multiline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": 3
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "plugin:vue/recommended",
    "plugin:vue/essential"
  ]
}